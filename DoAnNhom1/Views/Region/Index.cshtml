@model IEnumerable<DoAnNhom1.Models.Region>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-success">Region</h1>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h4 class="text-success">@TempData["nofi"]</h4>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IDRe)</td>
                <td>@Html.DisplayFor(modelItem => item.NameRe)</td>
                <td class="text-center"><img src="@Url.Content(item.ImgRe)" alt="Image" width="450" height="200" /></td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
