@model DoAnNhom1.Models.Region

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Region", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.IDRe, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.IDRe, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NameRe, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NameRe, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ImgRe, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <img src="@Url.Content(Model.ImgRe)" class="img-fluid" id="previewImg" />
                        <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
