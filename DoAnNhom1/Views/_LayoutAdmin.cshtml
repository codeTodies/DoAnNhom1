<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/Admin.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container d-flex">
        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-4 pb-4">
                <h3 class="fs-4"><span class="bg-white text-dark rounded shadow px-2">GreenRoot</span><span class="text-white">Admin</span></h3>
                <button class="btn d-mb-none d-block close-btn px-1 py-0 text-white"><i class="fa-solid fa-bars-staggered"></i></button>
            </div>
            <ul class="list-unstyled px-2">
                <li class=""><a href="/User/Index" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-user mr-2"></i>Users</a></li>
                <li class=""><a href="/Region/Index" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-location-dot mr-2"></i>Region</a></li>
                <li class=""><a href="/Tree/Index" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-tree mr-2"></i>Tree</a></li>
            </ul>
            <hr class="h-color mx-2" />
        </div>
        <div class="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">
                        <span class="logo ">
                            <img src="~/image/logo.jpg" class="img-fluid p-1" style="width:65px; margin:-3px 0px 0px 0px;">GreenRoots
                        </span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link">Hello, @Session["NameUser"]</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger" href="@Url.Action("LogOutUser", "Login")">LogOut</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="dashboard-content px-3 pt-4">
                <p>@RenderBody()</p>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-z9vuEd0aW4ZLl3m9/1jp6m2iJT0aCy8pZaON/jq0BqIlnq8YqzWeFz/kt8k8xK+J" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script>
        $(".sidebar ul li").on('click', function () {
            $(".sidebar ul li.active").removeClass('active');
            $(this).addClass('active');
        });
        $(".open-btn").on('click', function () {
            $(".sidebar").addClass('active');
        });
        $(".close-btn").on('click', function () {
            $(".sidebar").removeClass('active');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
